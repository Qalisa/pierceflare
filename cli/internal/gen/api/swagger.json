{
  "info": {
    "title": "PierceFlare",
    "version": "1.1.0",
    "description": "All requests require an authentication token generated by the Pierceflare server, associated with a DDNS domain."
  },
  "openapi": "3.0.0",
  "components": {
    "schemas": {
      "RemoteOperation": {
        "type": "string",
        "enum": [
          "batch",
          "dummy"
        ]
      },
      "ErrCode": {
        "type": "string",
        "enum": [
          "UNRESOLVABLE"
        ]
      }
    },
    "parameters": {}
  },
  "paths": {
    "/api/infos": {
      "get": {
        "description": "Gives back to requester its associated domain.",
        "responses": {
          "200": {
            "description": "Domain associated with CLI Token",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                },
                "example": "whatever.pierceflare.com"
              }
            }
          }
        }
      }
    },
    "/api/flare": {
      "put": {
        "description": "Allows to notify the server that your IP address changed, so that Cloudflare's DDNS entry definition can change accordingly.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "ip": {
                    "type": "string",
                    "format": "ip"
                  },
                  "dummy": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "When flare request has been successfully acknoledged",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "op": {
                      "$ref": "#/components/schemas/RemoteOperation"
                    },
                    "resolvedIp": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "op",
                    "resolvedIp"
                  ]
                }
              }
            }
          },
          "500": {
            "description": "Remote IP of flare emitter is unresolvable.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "errCode": {
                      "$ref": "#/components/schemas/ErrCode"
                    },
                    "message": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "errCode",
                    "message"
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}
