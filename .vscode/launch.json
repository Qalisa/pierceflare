{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "name": "Launch Browser",
      "webRoot": "${workspaceFolder}/service",
      "cascadeTerminateToConfigurations": [
        "Debug: Vike /w Hono",
        "Debug: Vike /w Hono (production)",
        "Debug: Docker Compose (production)"
      ]
    },
    {
      "name": "Debug: Vike /w Hono",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun dev",
      "cwd": "${workspaceFolder}/service",
      "serverReadyAction": {
        "action": "startDebugging",
        "name": "Launch Browser",
        "pattern": "Server is ready",
        "killOnServerStop": true
      }
    },
    {
      "name": "Debug: Vike /w Hono (production)",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun prod",
      "cwd": "${workspaceFolder}/service",
      "serverReadyAction": {
        "action": "startDebugging",
        "name": "Launch Browser",
        "pattern": "Server is ready",
        "killOnServerStop": true
      },
      "env": {
        "NODE_ENV": "production"
      },
      "preLaunchTask": "Generate Bundle"
    },
    {
      "name": "Debug: Docker Compose (production)",
      "type": "node-terminal",
      "request": "launch",
      "command": "docker compose up --build",
      "cwd": "${workspaceFolder}/dev",
      "serverReadyAction": {
        "action": "startDebugging",
        "name": "Launch Browser",
        "pattern": "Server is ready",
        "killOnServerStop": true
      }
    }
  ]
}
