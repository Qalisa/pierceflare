{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API only (Bun)",
      "type": "node-terminal",
      "request": "launch",
      "command": "bun --inspect-brk src/entrypoint/index.ts",
      "cwd": "${workspaceFolder}/api",
      "env": {
        "NODE_ENV": "development"
      }
    },
    {
      "name": "API only (Attach)",
      "type": "node",
      "request": "attach",
      "presentation": {
        "hidden": true,
        "order": 99
      },
      // "continueOnAttach": true,
      "sourceMaps": true,
      "localRoot": "${workspaceFolder}/api",
      "remoteRoot": "/usr/src/app",
    },
    //
    //
    //
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Half-Stack (Bun)",
      "command": "docker compose up",
      "postDebugTask": "üóëÔ∏è Docker Compose",
      "cwd": "${workspaceFolder}/dev",
      "serverReadyAction": {
        "action": "startDebugging",
        "name": "API only (Bun)",
        "pattern": "Started.",
        "killOnServerStop": true
      },
      "env": {
        "COMPOSE_PROFILES": "without_api"
      }
    },
    {
      "type": "node-terminal",
      "request": "launch",
      "name": "Full-Stack (Bun, built, dockerized)",
      "command": "docker compose up --build",
      "postDebugTask": "üóëÔ∏è Docker Compose",
      "cwd": "${workspaceFolder}/dev",
      "serverReadyAction": {
        "action": "startDebugging",
        "name": "API only (Attach)",
        "pattern": "Started.",
        "killOnServerStop": true
      },
      "env": {
        "COMPOSE_PROFILES": "with_api"
      }
    },
  ]
}